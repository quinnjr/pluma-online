enum Category {
  FileConverters
  StatsVisualizations
  Transformations
  Dissimilarity
  Correlation
  Centrality
  Clustering
  TimeSeries
  ExternalTools
  Miscellaneous
}

enum Language {
  CXX
  Python
  Perl
  CUDA
}

model Plugin {
  id String @id @default(uuid()) @db.Uuid
  name String @unique
  category Category
  description String
  githubUrl String @unique
  language Language
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("plugins")
}

enum Role {
  Admin
  User
}

model User {
  id String @id @default(uuid()) @db.Uuid
  email String @unique
  passwordHash String
  role Role @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}
