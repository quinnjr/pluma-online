datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

generator nestgraphql {
  provider               = "node node_modules/prisma-nestjs-graphql"
  output                 = "../server/@generated/prisma-graphql"
  reExport               = Directories
  purgeOutput            = true
  fields_Validator_from  = "class-validator"
  fields_Validator_input = true
}

enum Category {
  FileConverters
  StatsVisualizations
  Transformations
  Dissimilarity
  Correlation
  Centrality
  Clustering
  TimeSeries
  ExternalTools
  Miscellaneous
}

enum Language {
  CXX
  Python
  Perl
  CUDA
  R
  Java
}

model Plugin {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name        String    @unique
  category    Category
  description String
  githubUrl   String    @unique
  language    Language
  rating      Int       @default(0)
  author      User?     @relation(fields: [authorId], references: [id])
  authorId    String?   @db.ObjectId
  isVerified  Boolean   @default(false)
  comments    Comment[]
  createdAt   DateTime  @default(now()) @db.Timestamp
  updatedAt   DateTime  @default(now()) @updatedAt @db.Timestamp

  @@map("plugins")
}

enum Role {
  Admin
  User
}

model User {
  id           String     @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email        String     @unique
  /// @HideField()
  passwordHash String
  displayName  String?
  website      String?
  avatar       String?
  role         Role       @default(User)
  plugins      Plugin[]
  pipelines    Pipeline[]
  posts        Post[]
  topics       Topic[]
  comments     Comment[]
  createdAt    DateTime   @default(now()) @db.Timestamp
  updatedAt    DateTime   @default(now()) @updatedAt @db.Timestamp

  @@map("users")
}

enum PipelineStatus {
  Completed
  InProgress
  Future
}

model Pipeline {
  id          String         @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name        String         @unique
  description String
  githubUrl   String         @unique
  status      PipelineStatus @default(Completed)
  rating      Int            @default(0)
  createdAt   DateTime       @default(now()) @db.Timestamp
  updatedAt   DateTime       @default(now()) @updatedAt @db.Timestamp
  User        User?          @relation(fields: [userId], references: [id])
  userId      String?        @db.ObjectId

  @@map("pipelines")
}

model ForumCategory {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name      String   @unique
  order     Int
  topics    Topic[]
  posts     Post[]
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp

  @@map("forumCategory")
}

model Topic {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title     String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
  posts     Post[]
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp

  ForumCategory   ForumCategory? @relation(fields: [forumCategoryId], references: [id])
  forumCategoryId String?        @db.ObjectId
  @@map("topics")
}

model Post {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
  content   String
  topic     Topic    @relation(fields: [topicId], references: [id])
  topicId   String   @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp

  ForumCategory   ForumCategory? @relation(fields: [forumCategoryId], references: [id])
  forumCategoryId String?        @db.ObjectId
  @@map("posts")
}

model Comment {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
  content   String
  plugin    Plugin   @relation(fields: [pluginId], references: [id])
  pluginId  String   @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp
}
